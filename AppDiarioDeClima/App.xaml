<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="AppDiarioDeClima.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#000029</Color>
            <Color x:Key="Secondary">#000040</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Secondary}" />
                <Setter Property="BarTextColor" Value="{StaticResource Secondary}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>